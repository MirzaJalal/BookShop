@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Cover Type</h1>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-warning"><i class="bi bi-plus-circle"></i>&nbsp; Create New Cover Type</a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped">
    <thead>
        <th>Cover Type Name</th>
        <th></th>
    </thead>
    <tbody>
        @foreach(var coverType in Model)
        {
            <tr>
                <td>@coverType.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@coverType.Id" class="btn btn-primary"><i class="bi bi-pencil-square">Edit</i></a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@coverType.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
